@page "/income"
@using DissertationArtefact.Shared
@inject HttpClient Http
@inject NavigationManager NavManager

<h1>Income</h1>

@if (incomes == null)
{
    <p><em>Loading income</em></p>
}
else
{

    <table class="table">
        <thead>
            <tr>
                <!--<th>@nameof(Income.LabelName)</th>
                <th>@nameof(Income.Occurance)</th>
                <th>@nameof(Income.PaymentDate)</th>
                <th>@nameof(Income.SenderName)</th>
                <th>@nameof(Income.Amount)</th>-->
                <th></th>
                <th>Name</th>
                <th>Payment Date</th>
                <th>Frequency</th>
                <th>Sender</th>
                <th>Amount</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var income in incomes)
            {
                <tr>
                    <!--<td>@income.LabelName</td>
                    <td>@income.Occurance</td>
                    <td>@income.PaymentDate</td>
                    <td>@income.SenderName</td>
                    <td>@income.Amount</td>-->
                    <td>
                        <button class="btn btn-primary" @onclick="@(() => NavManager.NavigateTo($"/Income-form/{income.IncomeID}"))">Edit</button>
                    </td>
                    <td>@income.LabelName</td>
                    <td>@income.PaymentDate</td>
                    <td>@income.Frequency</td>
                    <td>@income.SenderName</td>
                    <td>@income.Amount.ToString("£0.00")</td>
                </tr>
            }



        </tbody>

    </table>

    <button class="btn btn-primary" @onclick="@(() => NavManager.NavigateTo($"/income-form/{new Guid()}"))">Add New</button>
}

@code {
    private Income[] incomes;

    protected override async Task OnInitializedAsync()
    {
        incomes = await Http.GetFromJsonAsync<Income[]>("Income");
    }

}
